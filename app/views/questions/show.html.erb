<h1><%= @question.title %></h1>
  <% if @question.resolved == false %>
    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
  <% end %>
    <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this question?' } %> 
  <p><%= @question.body %></p>

<h3>Status</h3>
  <% if @question.resolved? %>
    <p>This question has been resolved. You can delete this question.</p>
  <% else %>
    <p>This question has not been resolved. Click edit to resolve this question.</p>
  <% end %>
