<h1>Edit Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for asking a question</p>
    <ul>
      <li>Be nice.</li>
      <li>Sound smart.</li>
      <li>Drink craft beer.</li>
    </ul>
  </div>
<div class="col-md-8">
  <%= form_for @question do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
    </div>
    <% if @question.resolved == false %>
      <div class="form-group">
        <%= f.label "Resolved? Check box if resolved" %>
        <%= f.check_box :resolved, {}, checked_value = true, unchecked_value = false%> 
      </div>
      <% end %>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
   <% end %>
  </div>
</div>
